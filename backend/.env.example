# Database Configuration
# For Docker Compose, use 'postgres' as hostname (service name)
# For local development, use 'localhost'
DATABASE_URL=postgresql://extractable_user:extractable_password@postgres:5432/extractable_db
POSTGRES_USER=extractable_user
POSTGRES_PASSWORD=extractable_password
POSTGRES_DB=extractable_db

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI API Configuration
OPENAI_API_KEY=your-key-here
OPENAI_SIMPLE_MODEL=gpt-5-nano
OPENAI_REGULAR_MODEL=gpt-5-mini
OPENAI_COMPLEX_MODEL=gpt-5

# Rate Limiting
MAX_RETRIES=3
RATE_LIMIT_RPM=60
RATE_LIMIT_TPM=32000
RATE_LIMIT_RPD=1500

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:80

# File Upload
MAX_UPLOAD_SIZE=10485760
STORAGE_PATH=./outputs

# API Version
API_VERSION=v1
